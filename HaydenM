PhoneTextField.addMouseListener(new MouseAdapter() {
            public void mouseClicked(MouseEvent e) {
                switch (PhoneTextField1) {
                    case 0:
                        PhoneTextField.setText("");
                        PhoneTextField1 = 1;
                        break;
                    case 1:
                        break;

                }
            }
        });
